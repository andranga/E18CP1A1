<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Products List</h1>
  </div>
  <div class="col-xs-4 col-sm-2 col-md-2">
    <%= link_to 'New Product', new_product_path, class: "btn btn-info btn-sm" %>
  </div>
</div>

<div class="row">
  <% @products.reverse.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
       
        <div class="caption">
          <h3><%= product.name %></h3>
          <h5><%= product.price %></h5>
          <h6><%= product.description.truncate(150)   %></h6>
          <small><%= time_ago_in_words(product.created_at) %> ago</small>
          
            <% if user_signed_in? %>
              <%= link_to 'Comprar', sale_new_path(product), method: :post, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
              <%= current_user.email %>
            <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>