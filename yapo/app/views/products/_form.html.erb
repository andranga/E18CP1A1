<% notice %>
<%= form_with(model: product, local: true, multipart: true, class: "form-horizontal") do |form| %>
  
  <fieldset>
    <div class="form-group">
      <%= form.label :name, "Name", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, id: :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_area :description, id: :description, class: "form-control", rows: 10 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :price, "Precio", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.number_field :price, id: :price, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit "Enviar", class: "btn btn-primary" %>
        <%= link_to 'Back', products_path, class: "btn btn-default"  %>
      </div>
    </div>
  </fieldset>
<% end %>
